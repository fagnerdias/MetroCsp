SysTREM_DOOR(i,e, op) = estacao.i.aproximar.e -> (SysTREM_DOOR(i,e, op) [] SysTREM_ARRIVED(i,e,op))

SysTREM_ARRIVED(i,e,op) = estacao.i.chegar.e -> estacao.i.parar.e -> (SysTREM_Wait(i,e,op) [] SysTREM_LEAVE(i,e,op))

SysTREM_Wait(i,e, op) = estacao.i.esperar.e -> DOOR_OPEN(i,e,op+1)

DOOR_OPEN(i,e,op) = door.i.abrir.e -> (DOOR_OPEN(i,e,op) [] DOOR_CLOSE(i,e,op-1))

DOOR_CLOSE(i,e, op) = door.i.fechar.e -> SysTREM_LEAVE(i,e,op)

SysTREM_LEAVE(i,e, op) = estacao.i.sair.e -> (if(e == 2) then SysTREM_DOOR(i,0,op)
											else SysTREM_DOOR(i, e+1,op))

SysTESTE = SysTREM_DOOR(0,0,0)

assert SysTESTE :[deadlock free]

