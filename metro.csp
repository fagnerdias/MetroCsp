SysPEOPLE_SUBWAY(i,e, qnt_est, qnt_trem,op) = people.i.aproximar.e -> (SysPEOPLE_SUBWAY(i,e, qnt_est, qnt_trem,op) [] SysPEOPLE_ARRIVED(i,e, qnt_est, qnt_trem,op))

SysPEOPLE_ARRIVED(i,e, qnt_est, qnt_trem,op) = people.i.chegar.e ->  PEOPLE_SUB_WAIT(i,e, qnt_est+1, qnt_trem,op)

PEOPLE_SUB_WAIT(i,e, qnt_est, qnt_trem,op) = (people.i.esperar.e ->(PEOPLE_SUB_OUT(i,e,qnt_est-1, qnt_trem,op) [] PEOPLE_SUB_WAIT(i,e,qnt_est, qnt_trem,op))) [] SysPEOPLE_DOOR(i,e, qnt_est, qnt_trem,op)

SysPEOPLE_DOOR(i,e, qnt_est, qnt_trem,op) = if(op == 1) then (if(qnt_est > 0) then (PEOPLE_IN(i,e, qnt_est-1, qnt_trem+1,op) [] PEOPLE_SUB_OUT(i,e,qnt_est-1, qnt_trem,op))
															else if (qnt_trem > 0) then PEOPLE_LEAVE(i,e,qnt_est, qnt_trem,op-1) 
															else PEOPLE_SUB_WAIT(i,e,qnt_est, qnt_trem,op))
											else PEOPLE_SUB_WAIT(i,e,qnt_est, qnt_trem,op)

PEOPLE_IN(i,e, qnt_est, qnt_trem,op) = people.i.entrar.e ->  (PEOPLE_LEAVE(i,e,qnt_est,qnt_trem,op-1) [] PEOPLE_WAIT(i,e,qnt_est, qnt_trem,op))

PEOPLE_WAIT(i,e, qnt_est, qnt_trem,op) = people.i.esperar.e -> DOOR_WAIT(i,e,qnt_est, qnt_trem,op)

DOOR_WAIT(i,e,qnt_est, qnt_trem,op) =  if (qnt_est > 0) then PEOPLE_WAIT(i,e, qnt_est, qnt_trem,op) [] (PEOPLE_LEAVE(i,e,qnt_est, qnt_trem,op-1) [] PEOPLE_IN(i,e,qnt_est-1,qnt_trem,op+1)) 
									else PEOPLE_WAIT(i,e, qnt_est, qnt_trem,op)

--CLOSE_DOOR(i,e, qnt_est, qnt_trem,op) = door.i.fechar.e -> (if(e == 2) then SysPEOPLE_DOOR(i,0,0,0)
--										else (SysPEOPLE_DOOR(i,e+1, qnt_est, qnt_trem,op) ))

PEOPLE_LEAVE(i,e, qnt_est, qnt_trem,op) = people.i.sair.e -> if (qnt_trem > 0) then PEOPLE_LEAVE(i,e,qnt_est,qnt_trem,op -1) 
												else DOOR_WAIT(i,e,qnt_est, qnt_trem,op)  
PEOPLE_SUB_OUT(i,e,qnt_est, qnt_trem,op) = people.i.sair.e -> SysPEOPLE_SUBWAY(i,e,0,0,0)												

SysTESTE2 = SysPEOPLE_SUBWAY(0,0,0,0,0) 

assert SysTESTE2 :[deadlock free]

